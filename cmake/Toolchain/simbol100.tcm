SET (CMAKE_SYSTEM_NAME Linux)
SET (CMAKE_C_COMPILER /usr/src/mini2440/arm-2008q3/bin/arm-none-linux-gnueabi-gcc)
SET (CMAKE_CXX_COMPILER /usr/src/mini2440/arm-2008q3/bin/arm-none-linux-gnueabi-g++)

SET (CMAKE_FIND_ROOT_PATH /usr/src/mini2440/arm-2008q3/arm-none-linux-gnueabi)
SET (CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)

SET (CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
SET (CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)

SET (CMAKE_C_FLAGS ${CMAKE_C_FLAGS} "-march=armv4t -mtune=arm920t")
SET (CMAKE_CXX_FLAGS ${CMAKE_CXX_FLAGS} "-march=armv4t -mtune=arm920t")

STRING (REGEX REPLACE ";" " " CMAKE_C_FLAGS "${CMAKE_C_FLAGS}")
STRING (REGEX REPLACE ";" " " CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS}")
SET (CMAKE_C_FLAGS "${CMAKE_C_FLAGS}" CACHE STRING "")
SET (CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS}" CACHE STRING "")